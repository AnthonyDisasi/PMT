@model IEnumerable<PMT.Models.Technicien>
@{
    ViewData["Title"] = "Techniciens";
    int nb = 1;
}

<div  class="col-xl-12" style="margin:auto">
    <div class="row">
    <h1>Les techniciens</h1>
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a asp-action="Create" class="btn btn-outline-success btn-xs"><i class="fa fa-plus text-light"></i>  nouveau</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <p class="text-muted font-13 m-b-30">

                                </p>
                                <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <td>#</td>
                                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                                            <th>@Html.DisplayNameFor(model => model.Nom)</th>
                                            <th>@Html.DisplayNameFor(model => model.Mail)</th>
                                            <th>@Html.DisplayNameFor(model => model.Titre)</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="6">Aucun technicien existe!</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@nb</td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Username)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nom)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Mail)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Titre)
                                                    </td>
                                                    <td style="text-align:center">
                                                        <a asp-controller="Technicien" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> </a>
                                                        <a asp-controller="Technicien" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> </a>
                                                        <a asp-controller="Technicien" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                                                    </td>
                                                </tr>
                                                nb++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

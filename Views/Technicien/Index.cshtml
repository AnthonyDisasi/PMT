@model IEnumerable<PMT.Models.Technicien>
@{
    ViewData["Title"] = "Liste";
    int nb = 1;
}

<div class="card">
    <div class="card-body">
        <div class="float-right">
            <a asp-controller="Technicien" asp-action="Create" class="btn btn-light btn-round px-5 float-right"><i class="bi bi-journal-plus"></i> Ajouter un technicien</a>
        </div>
        <h5 class="card-title">Techniciens</h5>

        <!-- Table with stripped rows -->
        <table class="table datatable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Username</th>
                    <th scope="col">E - mail</th>
                    <th scope="col">Affectations</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@nb</th>
                        <td>@Html.DisplayFor(i => item.Nom) - @Html.DisplayFor(i => item.Prenom) </td>
                        <td>@Html.DisplayFor(i => item.Titre)</td>
                        <td>@Html.DisplayFor(i => item.Username)</td>
                        <td>@Html.DisplayFor(i => item.Mail)</td>
                        @if (item.Affectations.Count() == 0)
                        {
                            <td>Aucune affectation</td>
                        }
                        else
                        {
                            <td>@item.Affectations.Count</td>
                        }

                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a asp-controller="Technicien" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                                <a asp-controller="Technicien" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Technicien" asp-action="Details" asp-route-id="@item.ID" class="btn btn-success"><i class="bi bi-info-circle"></i></a>
                            </div>
                        </td>
                    </tr>
                    nb++;
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>
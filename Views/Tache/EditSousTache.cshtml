@model SousTache
@{
    ViewData["Title"] = "Modifier";
}

<div class="col-xl-8" style="margin:auto">

    <div class="card">
        <div class="card-body pt-3">

            <!-- Profile Edit Form -->
            <form asp-controller="Tache" asp-action="EditSousTache" method="post" novalidate>
                <!--<input type="hidden" asp-for="TacheID" value="@ViewBag.IdParent" />-->
                <div class="text-center">
                    <h4>Modifier la tâche</h4>
                    <div class="pt-2">
                        <a asp-controller="Tache" asp-action="Details" asp-route-id="@Model.TacheID" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i></a>
                        <a asp-controller="Tache" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-outline-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>
                </div>
                <br />

                <input asp-for="TacheID" type="hidden" value="@ViewBag.TacheId" />
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Nom de la tâche</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="Nom" type="text" class="form-control" id="company" required>
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Description</label>
                    <div class="col-md-8 col-lg-9">
                        <textarea asp-for="Description" class="form-control" id="about" required style="height: 100px">...</textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Poids</label>
                    <div class="col-md-8 col-lg-9">
                        <input type="number" class="form-control" asp-for="Poids" required>
                        <span asp-validation-for="Poids" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Progression</label>
                    <div class="col-md-8 col-lg-9">
                        <select asp-for="Progression" class="form-control" aria-label="Default select example" required>
                            <option value="0">0%</option>
                            <option value="25">25%</option>
                            <option value="50">50%</option>
                            <option value="75">75%</option>
                            <option value="100">100%</option>
                        </select>
                        <span asp-validation-for="Progression" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Responsable</label>
                    <div class="col-md-8 col-lg-9">
                        <select asp-for="ResponsableTache" asp-items="ViewBag.Responsable" class="form-control" aria-label="Default select example" required>
                            <option value="">Selectionner le responsable</option>
                        </select>
                        <span asp-validation-for="ResponsableTache" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date début</label>
                    <div class="col-md-8 col-lg-9">
                        <input type="date" class="form-control" asp-for="Date_Debut" required>
                        <span asp-validation-for="Date_Debut" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date fin</label>
                    <div class="col-md-8 col-lg-9">
                        <input type="date" class="form-control" asp-for="Date_Fin" required>
                        <span asp-validation-for="Date_Fin" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning text-light">Modifier</button>
                </div>
            </form><!-- End Profile Edit Form -->
        </div>
    </div>

</div>
@model Tache
@{
    ViewData["Title"] = "Detail";
    int nb = 1;
}
<!--arrow-left-square-->

<div class="col-xl-8" style="margin:auto">

    <div class="card">
        <div class="card-body pt-3">

            <!-- Profile Edit Form -->
            <form>
                <div class="text-center">
                    <h4>Detail de la Tâche</h4>
                    <div class="pt-2">
                        <a asp=controller="Tache" asp-action="IndexTache" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i></a>
                        <a asp-controller="Tache" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-info btn-xs"><i class="fa fa-pencil"></i></a>
                        <a asp-controller="Tache" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-outline-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>
                </div>
                <br />

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Description</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Description</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Type</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Type</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Description Tâche parente</label>
                    <div class="col-md-8 col-lg-9">
                        @if (Model.TacheID == null)
                        {

                            <label class="col-md-4 col-lg-9 col-form-label">Pas de tâche parente</label>
                        }
                        else
                        {

                            <label class="col-md-4 col-lg-9 col-form-label">@Model.TacheID</label>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Priorité</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Priorite</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Statut</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Statut</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date début</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Date_Debut</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date finale</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Date_Fin</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Progression</label>
                    <div class="col-md-4 col-lg-9 col-form-label">
                        <div>
                            <div class="progress">
                                @if(Model.Etat >= 90)
                                {
                                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @Model.ColorEtat" aria-valuenow="@Model.Etat" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if(Model.Etat >= 70)
                                {
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: @Model.ColorEtat" aria-valuenow="@Model.Etat" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if(Model.Etat >= 50)
                                {
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @Model.ColorEtat" aria-valuenow="@Model.Etat" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if(Model.Etat >= 25)
                                {
                                    <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: @Model.ColorEtat" aria-valuenow="@Model.Etat" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else
                                {
                                    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @Model.ColorEtat" aria-valuenow="@Model.Etat" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form><!-- End Profile Edit Form -->
        </div>
    </div>

</div>
<br/><br/>

<div class="row">
    <div class="col-md-10 col-sm-10" style="margin:auto">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a asp-controller="Tache" asp-action="CreateSousTache" asp-route-id="@Model.ID"  class="btn btn-primary">Ajouter une sous-tâche</a>
                    </li>
                </ul>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <p class="text-muted font-13 m-b-30">Les sous-tâches</p>
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Priorité</th>
                                    <th scope="col">Statut</th>
                                    <th scope="col">Date debut</th>
                                    <th scope="col">Date fin</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Taches.Count != 0)
                                {
                                    nb = 1;
                                    @foreach (var item in Model.Taches)
                                    {
                                        <tr>
                                            <th scope="row">@nb</th>
                                            <td>@Html.DisplayFor(i => item.Nom)</td>
                                            <td>@Html.DisplayFor(i => item.Type)</td>
                                            <td>@Html.DisplayFor(i => item.Priorite)</td>
                                            <td>@Html.DisplayFor(i => item.Statut)</td>
                                            <td>@Html.DisplayFor(i => item.Date_Debut)</td>
                                            <td>@Html.DisplayFor(i => item.Date_Fin)</td>
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                                    <a asp-controller="Tache" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> </a>
                                                    <a asp-controller="Tache" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> </a>
                                                    <a asp-controller="Tache" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                                                </div>
                                            </td>
                                        </tr>
                                        nb++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">Aucune sous tâche</td>
                                    </tr>
                                }
                            </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-sm-10" style="margin:auto">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Affecter un technicien</button>

                    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">

                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Technicien</h4>
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
                                </button>
                            </div>
                            
                            <form class="" asp-controller="Tache" asp-action="AddAffectation"method="get" novalidate>
                                <div class="modal-body">
                                    <div class="field item form-group">
                                        <label class="col-form-label col-md-3 col-sm-3  label-align">Technicien</label>
                                        <div class="col-md-6 col-sm-6">
                                            <input name="idTache" type="hidden"  value="@Model.ID" class="form-control text-black" id="company">
                                            <select name="idTech" asp-items="@ViewBag.ListTech" class="form-control" placeholder="Nom du technicien" aria-label="Default select example" required>
                                                <option value="">Selectionner un technicien</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                                    <button type="submit" class="btn btn-primary">Ajouter</button>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                    </li>
                </ul>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <p class="text-muted font-13 m-b-30">Les techniciens affectés</p>            
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Titre</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Affectations.Count != 0)
                                    {
                                        nb = 1;
                                        @foreach (var item in Model.Affectations)
                                        {
                                            <tr>
                                                <th scope="row">@nb</th>
                                                <td>@Html.DisplayFor(i => item.Technicien.AllName)</td>
                                                <td>@Html.DisplayFor(i => item.Technicien.Titre)</td>
                                                <td>
                                                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                                        <a asp-controller="Tache" asp-action="Retire" asp-route-id="@item.ID" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            nb++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4">Aucune affectation</td>
                                        </tr>
                                    }
                            </tbody>
                            </table>
                            <!-- End Table with stripped rows colspan-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
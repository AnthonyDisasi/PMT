@model SousTache
@{
    ViewData["Title"] = "Delete";
}
<!--arrow-left-square-->
<br />
<br />
<br />

<div class="col-xl-5" style="margin:auto">

    <div class="card">
        <div class="card-body pt-3">
            <!-- Profile Delete Form -->
            <form asp-action="Delete" method="post" novalidate>
                <div class="text-center">
                    <h4>Supprimer la tâche</h4>
                    <div class="pt-2">
                        <a asp-controller="Tache" asp-action="DetailSoustache" asp-route-id="@Model.ID" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i></a>
                        <a asp-controller="Tache" asp-action="EditSousTache" asp-route-id="@Model.ID" asp-route-Tacheid="@Model.TacheID" class="btn btn-outline-info btn-xs"><i class="fa fa-pencil"></i></a>
                    </div>
                </div>
                <br />

                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Description</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Description</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Type</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Type</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date début</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Date_Debut</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label">Date finale</label>
                    <div class="col-md-8 col-lg-9">
                        <label class="col-md-4 col-lg-9 col-form-label">@Model.Date_Fin.Day.ToString()/@Model.Date_Fin.Month.ToString()/@Model.Date_Fin.Year.ToString()</label>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form><!-- End Profile Edit Form -->
        </div>
    </div>
</div>
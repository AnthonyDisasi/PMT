                                <input type="hidden" asp-for="ID" value="@ViewBag.technicienID" />
                                <span class="section">Informations</span>

                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align" asp-for="Nom"></label>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="form-control has-feedback-left" asp-for="Nom" />
                                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    <span asp-validation-for="Nom" class="text-danger"></span>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align" asp-for="Postnom"></label>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="form-control has-feedback-left" asp-for="Postnom" />
                                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    <span asp-validation-for="Postnom" class="text-danger"></span>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align" asp-for="Prenom"></label>
                                    <div class="col-md-6 col-sm-6">
